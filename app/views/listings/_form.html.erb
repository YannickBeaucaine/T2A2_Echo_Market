
<div class="d-flex justify-content-center align-items-center container ">
    <div>
        <%= simple_form_for listing do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price, min: 1.00 %>
        <%= f.input :item_condition, collection: ["Mint", "Very Good", "Good", "Average", "For parts"] %>
        <%= f.label :images %>
        <%= f.file_field :images, accept: 'image/jpg' %>
         <%= f.submit "Submit your gear" %>
    </div>
      

         <% end %>

</div>